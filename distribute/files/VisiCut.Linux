#!/bin/bash
# VisiCut Linux Starter
script="`readlink -f "${BASH_SOURCE[0]}"`"
DIR="`dirname "$script"`"
# get the number-part of the display variable
port=${DISPLAY##*:}
port=${port%.*}
# add it to the instance-port
let port=port+6543
java -Xms256m -Xmx2048m -jar "$DIR/Visicut.jar" --singleinstanceport $port "$@"
